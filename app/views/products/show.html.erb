<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-3">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Image:</strong>
      <%= image_tag(@product.image_url, class: "img-fluid thumbnail") unless @product.image_url.nil? %>
    </p>

    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>

    <p>
      <strong>Ratings:</strong>
      <% if @product.highest_rating_comment.nil? %>
      <%= @product.highest_rating_comment %>
      <% end %>
      <% if @product.lowest_rating_comment.nil? %>
      <%= @product.lowest_rating_comment %>
      <% end %>
    </p>

    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
    </div><!--end col-->
  </div><!-- end row-->
</div><!--end container-->
