<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, placeholder: "Enter your review here...", class: "form-control message-box" %>
    </p>
    <p>
      <%= f.label :rating %>
    </p>
    <div class="rating"></div>
    <p>
      <%= f.submit "Submit", class: "submit-button btn btn-light" %>
    </p>
  <% end %>
<% end %>
