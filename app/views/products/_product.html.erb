<% cache product do %>
<div class="card col-xs-12 col-sm-8 col-md-6 col-lg-4">
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"><%= product.description %></p>
    <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %><br>
    <strong>$ <%= product.price %></strong><br><br>
    <%= link_to 'Show', product, class: "card-link" %>
    <%= link_to 'Edit', edit_product_path(product), class: "card-link" %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
  </div><!--end card body-->
</div><!-- /col -->
<% end %>
